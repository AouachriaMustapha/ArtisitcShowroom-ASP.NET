@model IEnumerable<WEB.Models.SpaceViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}
<style>
    a.my-class {
        color: #5fba7d;
    }

        a.my-class:active {
            color: #5fba7d;
        }

        a.my-class:link {
            color: #5fba7d;
        }

        a.my-class:visited {
            color: #5fba7d;
        }
</style>


<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-dark">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject bold uppercase">List Spaces</span>
        </div>
        <div class="actions">
            <div class="btn-group btn-group-devided" data-toggle="buttons">

            </div>
        </div>
    </div>


    <h2>Index</h2>

    
    <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer" id="mytable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                   Action
                </th>
               
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                   
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

<script type="text/javascript" charset="utf8">
        $(document).ready( function () {
            $('#mytable').DataTable();
        } );
</script>
<img src="~/Content/img/mapp.png" onclick="location.href ='@Url.Action("MapEventByRegion", "Space")'" />
<br />
<img src="~/Content/img/CH3.png" onclick="location.href ='@Url.Action("Chart", "Space")'" />